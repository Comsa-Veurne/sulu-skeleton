<!DOCTYPE html>
<html lang="{{ app.request.locale|split('_')[0] }}">
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    {% block meta %}
        {% include "@SuluWebsite/Extension/seo.html.twig" with {
            "seo": extension.seo|default([]),
            "content": content|default([]),
            "urls": urls|default([]),
            "shadowBaseLocale": shadowBaseLocale|default(),
            "defaultLocale": app.request.locale
        } %}
    {% endblock %}

    {% block style %}
        <link rel="stylesheet" href="{{ asset('app.css') }}">
    {% endblock %}
</head>
<body>
    <nav class="nav-mobile">
        <svg class="nav-mobile-circle" height="50" width="50">
            <circle cx="25" cy="25" r="20" />
        </svg>
        <ul>
            <li>
                <a href="{{ sulu_content_root_path() }}">Homepage</a>
            </li>

            {% for item in sulu_navigation_root_tree('main') %}
                <li>
                    <a href="{{ sulu_content_path(item.url, item.webspaceKey) }}"
                       title="{{ item.title }}">{{ item.title }}</a>
                </li>
            {% endfor %}
        </ul>
    </nav>
    <header class="header">
        {% block header %}
            <div class="container">

                <div class="d-flex justify-content-end">
                    <button class="nav-mobile-toggle hamburger hamburger--spin" type="button">
                      <span class="hamburger-box">
                        <span class="hamburger-inner"></span>
                      </span>
                    </button>
                </div>
                <nav class="nav-main">
                    <ul>
                        <li>
                            <a href="{{ sulu_content_root_path() }}">Homepage</a>
                        </li>

                        {% for item in sulu_navigation_root_tree('main') %}
                            <li>
                                <a href="{{ sulu_content_path(item.url, item.webspaceKey) }}"
                                   title="{{ item.title }}">{{ item.title }}</a>
                            </li>
                        {% endfor %}
                    </ul>
                </nav>

                <ul class="language">
                    {% for key, value in urls %}
                        <li><a href="{{ sulu_content_path(value, null, key) }}">{{ key }}</a></li>
                    {% endfor %}
                </ul>
            </div>
        {% endblock %}
    </header>

    {% block content %}{% endblock %}

    <footer class="footer">
        {% block footer %}
            <div class="container">
                <p>{{ 'label.made_by'|trans }} <a rel="nofollow" title="Comsa" href="https://www.comsa.be">Comsa</a></p>
            </div>
        {% endblock %}
    </footer>

    {% block javascripts %}
        <script src="{{ asset('app.js') }}"></script>
    {% endblock %}
</body>
</html>

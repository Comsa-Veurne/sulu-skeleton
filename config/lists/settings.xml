<?xml version="1.0" ?>
<list xmlns="http://schemas.sulu.io/list-builder/list">
    <key>settings</key>

    <joins name="translation">
        <join>
            <entity-name>App\Entity\SettingTranslation</entity-name>
            <field-name>App\Entity\Setting.translations</field-name>
            <condition>App\Entity\SettingTranslation.locale = :locale</condition>
        </join>
    </joins>

    <properties>
        <property name="id" visibility="no" translation="sulu_admin.id">
            <field-name>id</field-name>
            <entity-name>App\Entity\Setting</entity-name>
        </property>

        <property name="key" visibility="always" searchability="yes" translation="app.setting.key">
            <field-name>key</field-name>
            <entity-name>App\Entity\Setting</entity-name>
        </property>

        <property name="label" visibility="always" searchability="yes" translation="app.setting.label">
            <field-name>label</field-name>
            <entity-name>App\Entity\Setting</entity-name>
        </property>

        <property name="value" visibility="always" searchability="yes" translation="app.setting.value">
            <field-name>value</field-name>
            <entity-name>App\Entity\SettingTranslation</entity-name>
            <joins ref="translation" />
        </property>
    </properties>
</list>

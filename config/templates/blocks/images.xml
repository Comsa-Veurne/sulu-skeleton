<?xml version="1.0" ?>
<type name="images" xmlns="http://schemas.sulu.io/template/template"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xmlns:xi="http://www.w3.org/2001/XInclude"
      xsi:schemaLocation="http://schemas.sulu.io/template/template http://schemas.sulu.io/template/template-1.0.xsd">
    <meta>
        <title lang="en">Images</title>
        <title lang="nl">Afbeeldingen</title>
    </meta>
    <properties>
        <property name="images" type="media_selection" mandatory="true">
            <meta>
                <title lang="en">Images</title>
                <title lang="nl">Afbeeldingen</title>
            </meta>
        </property>

        <property name="image_format" type="single_select" mandatory="true">
            <meta>
                <title lang="en">Image format</title>
                <title lang="nl">Formaat</title>
            </meta>

            <params>
                <param name="default_value" value="default"/>

                <param name="values" type="collection">
                    <param name="default">
                        <meta>
                            <title lang="en">Default</title>
                            <title lang="nl">Standaard</title>
                        </meta>
                    </param>

                    <param name="portrait">
                        <meta>
                            <title lang="en">Portrait</title>
                            <title lang="nl">Staand</title>
                        </meta>
                    </param>

                    <param name="landscape">
                        <meta>
                            <title lang="en">Landscape</title>
                            <title lang="nl">Liggend</title>
                        </meta>
                    </param>

                    <param name="square">
                        <meta>
                            <title lang="en">Square</title>
                            <title lang="nl">Vierkant</title>
                        </meta>
                    </param>
                </param>
            </params>
        </property>

        <xi:include href="includes/width.xml"/>
        <xi:include href="includes/columns.xml"/>
    </properties>
</type>
